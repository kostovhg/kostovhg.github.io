<!-- Login section -->
<div class="w-50 d-block mx-auto">
    <form action="#/login" method="post">
        <div class="form-group row">
            <label for="email" class="col-4 col-form-label">Email</label>
            <div class="col-8">
                <input type="text" id="email" name="email" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-4 col-form-label">Password</label>
            <div class="col-8">
                <input type="password" id="password" name="password" class="form-control">
            </div>
        </div>
        <hr>
        <button type="submit" class="btn btn-primary">Sign in</button>
        <hr>
        <p>If you don't have registration, you can use our <a href="#/register">register</a> form.</p> 
        <p>In case you have forgotten your password you can <a href="#/reset">receive password reset email</a></p>

    </form>
</div>
